
<h1>These are all your businesses</h1>
<div class="card-deck-wrapper">
  <div class="card-deck">
  <% @businesses.each do |business| %>
    <div class="card">
    <img class="card-img-top" src="/assets/card_image.jpg" alt="Card image cap">
      <div class="card-block">
        <h4 class="card-title"><%= link_to business.name, business_path(business) %> <br></h4>
        <p class="card-text"><%= link_to "#{business.url}" %> </p>
        <%= link_to 'Edit this business', edit_business_path(business), :class => 'btn btn-primary' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
<h5> </h5>
<%= link_to '<i class="fa fa-plus-circle fa-2x" aria-hidden="true"></i>  Add a new Business'.html_safe, new_business_path %>

