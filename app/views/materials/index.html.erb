
<%= link_to '<i class="fa fa-plus-circle fa-2x" aria-hidden="true"></i>  Add a Material'.html_safe, new_material_path %>
<br>
<% @materials.each do |material| %>
  ID: <%= material.id %> </br>
  Name: <%= material.name %></br>
  Total Quantity: <%= material.total_quantity %></br>
  Color: <%= material.color %></br>
  Size: <%= material.size %> </br>
  Current Batch: <%= material.current_batch %></br>
<% end %>
